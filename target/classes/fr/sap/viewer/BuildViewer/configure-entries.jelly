        function addRow(tableId){
            <!--alert('salut ');-->
            var table = document.getElementById(tableId);
<!--            alert(table.rows.length);-->
            <!--alert("aprÃ¨s get id");-->
            <!--// Create an empty <tr> element and add it to the 1st position of the table:-->
            var row = table.insertRow(table.rows.length);

            <!--// Insert new cells (<td> elements) at the 1st and 2nd position of the "new" <tr> element:-->
            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            var cell3 = row.insertCell(2);

            <!--// Add some text to the new cells:-->
            cell1.innerHTML = "&lt;input type=\"text\" name=\"ve_state\" value=\"${from.DEFAULT_STATE_NAME}\" /&gt;";
            cell2.innerHTML = "&lt;input type=\"color\" name=\"ve_backgroundColor\" value=\"#FFFFFF\" /&gt;";
            cell3.innerHTML = "&lt;input type=\"color\" name=\"ve_fontColor\" value=\"#FFFFFF\" /&gt;";
        }
        
        function deleteRow(tableId, stateValue) {
            <!--document.getElementById(tableId).deleteRow(index);-->
            <!--alert(stateValue);-->
            var table = document.getElementById(tableId);
            <!--alert(table.rows.length);-->
            <!--alert(table.rows[0].cells[0].innerHTML);-->
            <!--var i;-->
            for(var i = 0 ; i &lt; table.rows.length ; i++){
<!--            alert(table.rows[i].cells[0].innerHTML.match(stateValue));-->
                if(table.rows[i].cells[0].innerHTML.match(stateValue) != null){
                    <!--alert('clicked on '+stateValue);-->
                    document.getElementById(tableId).deleteRow(i);
                }
            }
        }
        
        function upRow(tableId, stateValue){
            var table = document.getElementById(tableId);
            for(var i = 0 ; i &lt; table.rows.length ; i++){
                if(table.rows[i].cells[0].innerHTML.match(stateValue) != null){
                    if(i == 1){
                        alert('This row is already the first one');
                    }else{
                        var rowToUp = table.rows[i].innerHTML;
                        table.rows[i].innerHTML = table.rows[i-1].innerHTML;
                        table.rows[i-1].innerHTML = rowToUp;
                    }
                    break;
                }
            }
        }
        
        function downRow(tableId, stateValue){
            var table = document.getElementById(tableId);
            for(var i = 0 ; i &lt; table.rows.length ; i++){
                if(table.rows[i].cells[0].innerHTML.match(stateValue) != null){
                var length = table.rows.length - 1;
                    if(i == length){
                        alert('This row is already the last one');
                    }else{
                        var rowToDown = table.rows[i].innerHTML;
                        table.rows[i].innerHTML = table.rows[i+1].innerHTML;
                        table.rows[i+1].innerHTML = rowToDown;
                    }
                    break;
                }
            }
        }
    </script>

        
